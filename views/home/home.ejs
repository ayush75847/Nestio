<% layout('/layouts/boilerplate') -%>

<!-- Hero Section -->
<section class="home-hero-section">
  <div class="hero-content">
    <h1>Welcome to <span class="brand-name">Nestio</span></h1>
    <p>Discover unique stays, cozy cottages, and breathtaking locations around the world. Your perfect getaway awaits.</p>
    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-number"><%= allListings.length %>+</span>
        <span class="stat-label">Properties</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">50+</span>
        <span class="stat-label">Destinations</span>
      </div>
      <div class="stat-item">
        <span class="stat-number">1000+</span>
        <span class="stat-label">Happy Guests</span>
      </div>
    </div>
  </div>
  
  <!-- Floating Elements -->
  <div class="floating-shapes">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
  </div>
</section>

<!-- Featured Listings Section -->
<section class="home-featured-section">
  <h2 class="section-title">
    <span class="title-accent">Featured</span> Listings
  </h2>
  
  <div class="featured-cards">
    <% allListings.slice(0, 6).forEach((listing, index) => { %>
      <article class="listing-card">
        <div class="card-image-wrapper">
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>" loading="lazy">
          <div class="card-overlay">
            <a href="/listings/<%= listing._id %>" class="view-details-btn">
              <i class="fas fa-eye"></i> View Details
            </a>
          </div>
        </div>
        
        <div class="listing-details">
          <h3><%= listing.title %></h3>
          
          <div class="listing-location">
            <i class="fas fa-map-marker-alt"></i>
            <span><%= listing.location %>, <%= listing.country %></span>
          </div>
          
          <div class="listing-footer">
            <div class="listing-price">
              <span class="currency">â‚¹</span>
              <span class="amount"><%= listing.price.toLocaleString("en-IN") %></span>
              <span class="period">/ night</span>
            </div>
            
            <a href="/listings/<%= listing._id %>" class="quick-view-btn">
              <i class="fas fa-arrow-right"></i>
            </a>
          </div>
        </div>
      </article>
    <% }) %>
  </div>
  

</section>

<!-- Why Choose Nestio Section -->
<section class="home-info-section">
  <h2>Why Choose <span class="brand-highlight">Nestio</span>?</h2>
  
  <div class="features-grid">
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-star"></i>
      </div>
      <h3>Curated Listings</h3>
      <p>Handpicked quality stays that guarantee comfort and authenticity</p>
    </div>
    
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-users"></i>
      </div>
      <h3>Honest Reviews</h3>
      <p>Authentic feedback from real travelers to help you decide</p>
    </div>
    
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-globe-americas"></i>
      </div>
      <h3>Worldwide Destinations</h3>
      <p>Explore amazing locations across the globe with ease</p>
    </div>
    
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-shield-alt"></i>
      </div>
      <h3>Secure Booking</h3>
      <p>Safe and protected reservations for peace of mind</p>
    </div>
    
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-headset"></i>
      </div>
      <h3>24/7 Support</h3>
      <p>Round-the-clock assistance whenever you need help</p>
    </div>
    
    <div class="feature-card">
      <div class="feature-icon">
        <i class="fas fa-tag"></i>
      </div>
      <h3>Best Prices</h3>
      <p>Competitive rates and exclusive deals for our members</p>
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="home-cta-section">
  <div class="cta-content">
    <h2>Have a Property to Share?</h2>
    <p>Join our community of hosts and start earning by sharing your unique space with travelers</p>
    <a href="/listings/new" class="btn btn-cta">
      <i class="fas fa-plus-circle"></i>
      <span>List Your Property</span>
    </a>
  </div>
  
  <!-- Animated Background Elements -->
  <div class="cta-shapes">
    <div class="cta-shape cta-shape-1"></div>
    <div class="cta-shape cta-shape-2"></div>
    <div class="cta-shape cta-shape-3"></div>
  </div>
</section>