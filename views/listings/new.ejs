<% layout('/layouts/boilerplate') -%>

    <div class="listing-form-wrapper">
        <div class="listing-form-card premium-card">

            <h3 class="form-title">
                <i class="fa-solid fa-house-circle-check"></i>
                Create New Listing
            </h3>

            <form method="post" action="/listings/create" class="listing-form">

                <div class="form-group">
                    <label><i class="fa-solid fa-heading"></i> Title</label>
                    <input type="text" name="listing[title]" placeholder="Name of Place">
                </div>

                <div class="form-group">
                    <label><i class="fa-solid fa-image"></i> Image URL</label>
                    <input type="text" name="listing[image][url]" placeholder="https://image.com/photo.jpg">
                </div>

                <div class="form-group">
                    <label><i class="fa-solid fa-indian-rupee-sign"></i> Price / night</label>
                    <input type="number" name="listing[price]" placeholder="Amount">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label><i class="fa-solid fa-location-dot"></i> Location</label>
                        <input type="text" name="listing[location]" placeholder="Dehradun">
                    </div>

                    <div class="form-group">
                        <label><i class="fa-solid fa-flag"></i> Country</label>
                        <input type="text" name="listing[country]" placeholder="India">
                    </div>
                </div>

                <div class="form-group">
                    <label><i class="fa-solid fa-pen"></i> Description</label>
                    <textarea name="listing[description]" rows="4" placeholder="Describe your place..."></textarea>
                </div>

                <button class="submit-btn">
                    <i class="fa-solid fa-plus"></i> Add Listing
                </button>

            </form>
        </div>
    </div>